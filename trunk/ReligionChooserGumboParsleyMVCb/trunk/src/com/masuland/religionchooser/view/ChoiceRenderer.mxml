<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:spicefactory="http://www.spicefactory.org/parsley" 
	autoDrawBackground="true"
	>

	<fx:Metadata>
		[HostComponent("com.masuland.religionchooser.view.ChoiceRendererCB")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import com.masuland.religionchooser.vo.ChoiceVO;
			import com.masuland.religionchooser.vo.LangVO;

			[Inject]
			[Bindable]
			public var cb:ChoiceRendererCB;
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<spicefactory:Configure />
	</fx:Declarations>
	
	<s:Button 
		label="{ LangVO( ChoiceVO( data ).langVO.getItemAt(cb.currentLayout.localeVO.getItemIndex(cb.currentLocale)) ).value }"
		click="cb.showNext(ChoiceVO( data ))"
		styleName="choiceButton"
		/>
	
</s:ItemRenderer>
