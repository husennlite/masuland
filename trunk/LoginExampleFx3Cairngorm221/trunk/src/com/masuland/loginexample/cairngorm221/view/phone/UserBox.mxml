<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:vo="com.masuland.loginexample.cairngorm221.vo.*"
	width="100%" height="100%"
	>
	
	<mx:Script>
		<![CDATA[
			import com.masuland.loginexample.cairngorm221.control.event.LogoutEvent;
			import com.masuland.loginexample.cairngorm221.control.event.UpdateUserEvent;
			import com.masuland.loginexample.cairngorm221.model.AppModel;

			[Bindable]
			public var appModel:AppModel = AppModel.getInstance();
		]]>
	</mx:Script>
	
	<vo:UserVO
		id="vo_user"
		username="{ appModel.currentUser.username }"
		firstname="{ tip_firstname.text }"
		lastname="{ tip_lastname.text }"
		email="{ tip_email.text }"
		birthday="{ df_birthday.selectedDate }"
		/>

	<mx:VBox
		left="5" right="5" top="5" bottom="5"
		>
		
		<mx:HBox
			width="100%"
			verticalAlign="middle"
			>

			<mx:Label
				id="txt_header"
				width="100%"
				styleName="loginHeader"
				text="{resourceManager.getString('resources', 'title_user_account')}"
				/>
			
			<mx:Button
				id="btn_logout"
				height="35"
				label="{resourceManager.getString('resources', 'cta_logout')}"
				buttonMode="true" 
				useHandCursor="true"
				click="new LogoutEvent().dispatch()"
				/>
			
		</mx:HBox>
		
		<mx:HRule
			width="100%"
			/>
		
		<mx:Canvas
			width="100%" height="100%"
			>
			
			<mx:VBox
				horizontalCenter="-10" verticalCenter="0"
				>
				
				<mx:HBox
					width="100%"
					verticalGap="0"
					>
					<mx:Label
						text="{resourceManager.getString('resources', 'txt_username')}"
						/>
					<mx:Text
						width="100%"
						text="{ appModel.currentUser.username }"
						/>
				</mx:HBox>
			
				<mx:VBox
					verticalGap="0"
					>
					<mx:Label
						width="100%"
						text="{resourceManager.getString('resources', 'txt_firstname')}"
						/>
					<mx:TextInput
						id="tip_firstname"
						width="100%"
						text="{ appModel.currentUser.firstname }"
						/>
				</mx:VBox>
				
				<mx:VBox
					verticalGap="0"
					>
					<mx:Label
						width="100%"
						text="{resourceManager.getString('resources', 'txt_lastname')}"
						/>
					<mx:TextInput
						id="tip_lastname"
						width="100%"
						text="{ appModel.currentUser.lastname }"
						/>
				</mx:VBox>
				
				<mx:VBox
					verticalGap="0"
					>
					<mx:Label
						width="100%"
						text="{resourceManager.getString('resources', 'txt_email')}"
						/>
					<mx:TextInput
						id="tip_email"
						width="100%"
						text="{ appModel.currentUser.email }"
						/>
				</mx:VBox>
				
				<mx:VBox
					verticalGap="0"
					>
					<mx:Label
						width="100%"
						text="{resourceManager.getString('resources', 'txt_birthday')}"
						/>
					<mx:DateField
						id="df_birthday"
						width="100%"
						selectedDate="{ appModel.currentUser.birthday }"
						/>
				</mx:VBox>
				
			</mx:VBox>
			
		</mx:Canvas>
		
		<mx:HRule
			width="100%"
			/>
		
		<mx:HBox
			id="bx_updateButtons"
			>
			<mx:Button
				id="btn_update"
				height="35"
				label="{resourceManager.getString('resources', 'cta_update')}"
				buttonMode="true" 
				useHandCursor="true"
				click="new UpdateUserEvent(vo_user).dispatch()"
				/>
		</mx:HBox>

	</mx:VBox>
		
</mx:Canvas>
