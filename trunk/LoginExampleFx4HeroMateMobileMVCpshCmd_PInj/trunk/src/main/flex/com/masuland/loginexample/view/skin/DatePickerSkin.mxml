<?xml version="1.0" encoding="utf-8"?>
<s:Skin 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"
	>
	
	<fx:Metadata>
		[HostComponent("com.masuland.loginexample.view.component.DatePickerCP")]
	</fx:Metadata>
	
	<s:BorderContainer styleName="appBox">
		
		<s:layout>
			<s:VerticalLayout gap="0" />
		</s:layout>
		
		<s:HGroup
			width="100%"
			paddingLeft="5" paddingRight="5" paddingTop="15" paddingBottom="10"
			>
			
			<s:Label
				id="txt_dateSummary"
				width="100%"
				textAlign="center"
				/>
			
		</s:HGroup>
		
		<s:BorderContainer
			width="100%" height="1"
			styleName="line"
			/>

		<s:HGroup width="100%" gap="10" paddingBottom="10" paddingLeft="10" paddingRight="10"
				  paddingTop="10">
			
			<s:VGroup
				width="100%"
				>
				
				<s:Button
					id="btn_increaseDay"
					width="100%"
					label="{ resourceManager.getString('resources', 'cta_increaseValue') }"
					/>
				
				<s:Label
					id="txt_day"
					width="100%"
					textAlign="center"
					/>
				
				<s:Button
					id="btn_decreaseDay"
					width="100%"
					label="{ resourceManager.getString('resources', 'cta_decreaseValue') }"
					/>

			</s:VGroup>

			<s:VGroup
				width="100%"
				>
				
				<s:Button
					id="btn_increaseMonth"
					width="100%"
					label="{ resourceManager.getString('resources', 'cta_increaseValue') }"
					/>
				
				<s:Label
					id="txt_month"
					width="100%"
					textAlign="center"
					/>
				
				<s:Button
					id="btn_decreaseMonth"
					width="100%"
					label="{ resourceManager.getString('resources', 'cta_decreaseValue') }"
					/>
				
			</s:VGroup>

			<s:VGroup
				width="100%"
				>
				
				<s:Button
					id="btn_increaseYear"
					width="100%"
					label="{ resourceManager.getString('resources', 'cta_increaseValue') }"
					/>
				
				<s:Label
					id="txt_year"
					width="100%"
					textAlign="center"
					/>
				
				<s:Button
					id="btn_decreaseYear"
					width="100%"
					label="{ resourceManager.getString('resources', 'cta_decreaseValue') }"
					/>
				
			</s:VGroup>

		</s:HGroup>
		
		<s:Group
			width="100%"
			>
			
			<s:layout>
				<s:TileLayout
					paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5"
					requestedColumnCount="2"
					/>
			</s:layout>
			
			<s:Button 
				id="btn_set" 
				label="{ resourceManager.getString('resources', 'cta_setValue') }"
				/>
			
			<s:Button 
				id="btn_cancel" 
				label="{ resourceManager.getString('resources', 'cta_cancelValue') }"
				/>
			
		</s:Group>
		
		
	</s:BorderContainer>
	
</s:Skin>
