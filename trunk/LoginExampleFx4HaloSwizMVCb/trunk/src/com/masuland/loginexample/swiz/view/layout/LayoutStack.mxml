<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:web="com.masuland.loginexample.swiz.view.layout.web.*" 
	xmlns:phone="com.masuland.loginexample.swiz.view.layout.phone.*"
	width="{ cb.currentLayout.width }" height="{ cb.currentLayout.height }"
	resizeEffect="{ fx_resize }" 
	>
	
	<mx:states>
		<mx:State name="web">
			<mx:SetProperty target="{ layout_web }" name="visible" value="true" />
			<mx:SetProperty target="{ layout_web }" name="includeInLayout" value="true" />
		</mx:State>
		<mx:State name="phone">
			<mx:SetProperty target="{ layout_phone }" name="visible" value="true" />
			<mx:SetProperty target="{ layout_phone }" name="includeInLayout" value="true" />
		</mx:State>
	</mx:states>
	
	<mx:Script>
		<![CDATA[
			import com.masuland.loginexample.swiz.view.cb.LayoutStackCB;
			
			[Inject]
			[Bindable]
			public var cb:LayoutStackCB;
		]]>
	</mx:Script>
	
	<mx:Resize
		id="fx_resize"
		duration="150"
		/>
	
	<web:AppStack
		id="layout_web"
		currentState="{ cb.appStackState }"
		visible="false"
		includeInLayout="false"
		/>

	<phone:AppStack
		id="layout_phone"
		currentState="{ cb.appStackState }"
		visible="false"
		includeInLayout="false"
		/>

</mx:Canvas>
