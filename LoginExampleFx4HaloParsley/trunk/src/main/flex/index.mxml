<?xml version="1.0" encoding="utf-8"?>
<s:Application 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:cairngorm="com.adobe.cairngorm.*"
	xmlns:spicefactory="http://www.spicefactory.org/parsley"
	xmlns:view="com.masuland.loginexample.view.*"
	width="100%" height="100%" 
	pageTitle="Parsley - Login Example (Fx4, Halo)"
	applicationComplete="application1_applicationCompleteHandler(event)"
	viewSourceURL="srcview/index.html"
	>
	
	<fx:Metadata>
		[ResourceBundle("resources")]
		[Event(name="AppEvent.INITIALIZE_CLIENT", type="com.masuland.loginexample.control.event.AppEvent")]
		[ManagedEvents("AppEvent.INITIALIZE_CLIENT")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import com.masuland.loginexample.AppConfig;
			import com.masuland.loginexample.control.event.AppEvent;
			
			import mx.events.FlexEvent;
			import mx.logging.LogEventLevel;
			
			import org.spicefactory.parsley.core.messaging.ErrorPolicy;
			
			protected function application1_applicationCompleteHandler(event:FlexEvent):void
			{
				dispatchEvent(new AppEvent(AppEvent.INITIALIZE_CLIENT));
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<spicefactory:ContextBuilder>
			<spicefactory:FlexConfig type="{ AppConfig }"/>
			<spicefactory:MessageSettings unhandledErrors="{ErrorPolicy.RETHROW}"/> 
		</spicefactory:ContextBuilder>
		
		<s:TraceTarget level="{ LogEventLevel.DEBUG }">
			<s:filters>
				<fx:Array>
					<fx:String>org.spicefactory.*</fx:String>
				</fx:Array>
			</s:filters>
		</s:TraceTarget>
		
		<spicefactory:Configure />
	</fx:Declarations>

	<view:AppView
		/>

</s:Application>
