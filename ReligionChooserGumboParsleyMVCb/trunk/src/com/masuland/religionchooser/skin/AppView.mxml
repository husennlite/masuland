<?xml version="1.0" encoding="utf-8"?>
<s:Group 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:spicefactory="http://www.spicefactory.org/parsley"
	xmlns:view="com.masuland.religionchooser.view.*"
	width="100%" height="100%" 
	initialize="group1_initializeHandler(event)"
	>
	
	<fx:Metadata>
		[HostComponent("com.masuland.religionchooser.view.AppViewCB")]
	</fx:Metadata>

	<fx:Declarations>
		<spicefactory:Configure />
	</fx:Declarations>

	<fx:Script>
		<![CDATA[
			import com.masuland.religionchooser.view.AppViewCB;
			
			import mx.events.FlexEvent;
			
			[Inject]
			[Bindable]
			public var cb:AppViewCB;
			
			protected function group1_initializeHandler(event:FlexEvent):void
			{
				percentWidth = 100;
				percentHeight = 100;
			}
		]]>
	</fx:Script>
	
	<s:HGroup
		left="10" right="10" top="10" bottom="10"
		>
		
		<s:VGroup
			width="100%" height="100%"
			>

			<s:HGroup
				verticalAlign="middle"
				>
				
				<mx:Image
					source="content/sun_icon.png"
					/>
				
				<s:Label
					text="{ resourceManager.getString('resources', 'txt_app_description') }"
					/>
				
			</s:HGroup>
			
			<view:ContentBoxCB 
				id="bx_content"
				width="100%" height="100%"
				/>

		</s:VGroup>
	
		<view:SettingsBoxCB
			id="bx_settings"
			/>

	</s:HGroup>
	
</s:Group>
