<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:cairngorm="com.adobe.cairngorm.*"
	xmlns:spicefactory="http://www.spicefactory.org/parsley"
	xmlns:view="com.masuland.loginexample.view.*"
	width="100%" height="100%"
	pageTitle="Parsley (MVCbStoTsk) - Login Example (Fx4, Halo)"
	viewSourceURL="srcview/index.html"
	>

	<fx:Metadata>
		[ResourceBundle("resources")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import com.masuland.loginexample.AppConfig;
			
			import mx.logging.LogEventLevel;
			
			import org.spicefactory.parsley.core.messaging.ErrorPolicy;
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<spicefactory:ContextBuilder>
			<spicefactory:FlexConfig type="{ AppConfig }"/>
			<spicefactory:MessageSettings unhandledErrors="{ ErrorPolicy.RETHROW }"/> 
			<spicefactory:Scope name="appModel" inherited="true"/>
		</spicefactory:ContextBuilder>
		
		<s:TraceTarget level="{ LogEventLevel.DEBUG }">
			<s:filters>
				<fx:Array>
					<fx:String>org.spicefactory.*</fx:String>
				</fx:Array>
			</s:filters>
		</s:TraceTarget>
		
		<spicefactory:Configure />
	</fx:Declarations>

	<view:AppView
		id="view"
		/>

</s:Application>
