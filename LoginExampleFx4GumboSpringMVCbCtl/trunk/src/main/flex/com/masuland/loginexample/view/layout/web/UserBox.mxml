<?xml version="1.0" encoding="utf-8"?>
<s:Group 
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:vo="com.masuland.loginexample.vo.*"
	xmlns:parsley="http://www.spicefactory.org/parsley"
	width="100%" height="100%"
	>
	
	<fx:Script>
		<![CDATA[
			import com.masuland.loginexample.model.AppModel;
			import com.masuland.loginexample.view.cb.UserBoxCB;

			[Inject]
			[Bindable]
			public var appModel:AppModel;
			
			[Inject]
			[Bindable]
			public var cb:UserBoxCB;
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<vo:UserVO
			id="vo_user"
			username="{ appModel.currentUser.username }"
			firstname="{ tip_firstname.text }"
			lastname="{ tip_lastname.text }"
			email="{ tip_email.text }"
			birthday="{ df_birthday.selectedDate }"
			/>
	</fx:Declarations>

	<s:VGroup
		left="5" right="5" top="5" bottom="5"
		>
		
		<s:HGroup
			width="100%"
			verticalAlign="middle"
			>

			<s:Label
				id="txt_header"
				width="100%"
				styleName="loginHeader"
				text="{ resourceManager.getString('resources', 'title_user_account') }"
				/>
			
			<s:Button
				id="btn_logout"
				label="{ resourceManager.getString('resources', 'cta_logout') }"
				buttonMode="true" 
				useHandCursor="true"
				click="cb.logout()"
				/>
			
		</s:HGroup>
		
		<mx:HRule
			width="100%"
			/>
		
		<s:Group
			width="100%" height="100%"
			>

			<mx:Form
				horizontalCenter="0" verticalCenter="0"
				>
				<mx:FormItem
					width="100%"
					label="{ resourceManager.getString('resources', 'txt_username') }"
					direction="horizontal"
					required="false"
					>
					<mx:Text
						width="100%"
						text="{ appModel.currentUser.username }"
						/>
				</mx:FormItem>
				<mx:FormItem
					width="100%"
					label="{ resourceManager.getString('resources', 'txt_firstname') }"
					direction="horizontal"
					required="false"
					>
					<s:TextInput
						id="tip_firstname"
						width="100%"
						text="{ appModel.currentUser.firstname }"
						/>
				</mx:FormItem>
				<mx:FormItem
					width="100%"
					label="{ resourceManager.getString('resources', 'txt_lastname') }"
					direction="horizontal"
					required="false"
					>
					<s:TextInput
						id="tip_lastname"
						width="100%"
						text="{ appModel.currentUser.lastname }"
						/>
				</mx:FormItem>
				<mx:FormItem
					width="100%"
					label="{ resourceManager.getString('resources', 'txt_email') }"
					direction="horizontal"
					required="false"
					>
					<s:TextInput
						id="tip_email"
						width="100%"
						text="{ appModel.currentUser.email }"
						/>
				</mx:FormItem>
				<mx:FormItem
					width="100%"
					label="{ resourceManager.getString('resources', 'txt_birthday') }"
					direction="horizontal"
					required="false"
					>
					<mx:DateField
						id="df_birthday"
						width="100%"
						selectedDate="{ appModel.currentUser.birthday }"
						/>
				</mx:FormItem>
				<mx:FormItem
					>
					<s:HGroup
						id="bx_updateButtons"
						>
						<s:Button
							id="btn_update"
							label="{ resourceManager.getString('resources', 'cta_update') }"
							buttonMode="true" 
							useHandCursor="true"
							click="cb.updateUser(vo_user)"
							/>
					</s:HGroup>
				</mx:FormItem>
			</mx:Form>
			
		</s:Group>

	</s:VGroup>
		
</s:Group>
