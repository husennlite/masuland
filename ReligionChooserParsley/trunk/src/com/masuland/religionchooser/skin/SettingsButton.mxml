<?xml version="1.0" encoding="utf-8"?>
<s:Skin 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	>
	
	<fx:Metadata>[HostComponent("spark.components.ToggleButton")]</fx:Metadata>
	
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
		<s:State name="upAndSelected"/>
		<s:State name="overAndSelected"/>
		<s:State name="downAndSelected"/>
		<s:State name="disabledAndSelected"/>
	</s:states>
	
	<s:Rect height="30" radiusX="5" width="32" x="0.5" y="0.5">
		<s:stroke>
			<s:LinearGradientStroke caps="round" joints="miter" miterLimit="4" rotation="90" weight="1">
				<s:GradientEntry alpha="1.0" color="#81A6DD" ratio="0"/>
				<s:GradientEntry alpha="1.0" color="#95ABC1" ratio="1"/>
			</s:LinearGradientStroke>
		</s:stroke>
		<s:fill>
			<s:LinearGradient rotation="200.225">
				<s:GradientEntry alpha="1.0" color="#F2F4F7" ratio="0.027450980392156862"/>
				<s:GradientEntry alpha="1.0" color="#BAD1F7" ratio="1"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:RichText 
		id="richtext1"
		color="#2B4381" 
		fontFamily="Times New Roman" 
		fontSize="12" 
		rotation.upAndSelected="180" 
		rotation.overAndSelected="180"
		rotation.downAndSelected="180"
		rotation.disabledAndSelected="180"
		tabStops="S0 S50" 
		text="&lt;&lt;" 
		text.upAndSelected="&gt;&gt;" 
		text.overAndSelected="&gt;&gt;"
		text.downAndSelected="&gt;&gt;"
		text.disabledAndSelected="&gt;&gt;"
		x="8" x.down="22" 
		y="10" y.down="20" 
		/>
	
	<s:transitions>
		<s:Transition fromState="*" toState="*" autoReverse="true">
			<s:Parallel>
				<s:Parallel target="{richtext1}">
					<s:Move duration="250" autoCenterTransform="true"/>
					<s:Rotate duration="250" autoCenterTransform="true"/>
				</s:Parallel>
			</s:Parallel>
		</s:Transition>
	</s:transitions>
	
</s:Skin>
