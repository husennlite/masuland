<?xml version="1.0" encoding="utf-8"?>
<s:Application 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:skin="com.masuland.religionchooser.skin.*" 
	xmlns:swiz="http://swiz.swizframework.org"
	pageTitle="Religion Chooser"
	width="100%" height="100%" 
	viewSourceURL="srcview/index.html" 
	>
	
	<fx:Metadata>
		[ResourceBundle("resources")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import com.masuland.religionchooser.AppBean;
			import com.masuland.religionchooser.event.AppEvent;
			import com.masuland.religionchooser.skin.web.sky.ContentBox;
			import com.masuland.religionchooser.skin.web.sun.ContentBox;
			
			import mx.events.FlexEvent;
			
			[Dispatcher]
			public var dispatcher:IEventDispatcher;
		]]>
	</fx:Script>
	
	<fx:Declarations>
		
		<swiz:Swiz
			beanProviders="{ [AppBean] }"
			>
			<swiz:config>
				<swiz:SwizConfig
					eventPackages="com.masuland.religionchooser.event"
					viewPackages="com.masuland.religionchooser.view" 
					/>
			</swiz:config>
		</swiz:Swiz>
		
	</fx:Declarations>
	
	<skin:AppView
		id="appView"
		/>
	
</s:Application>
