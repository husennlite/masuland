<?xml version="1.0" encoding="utf-8"?>
<s:Group 
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:vo="com.masuland.loginexample.vo.*"
	xmlns:parsley="http://www.spicefactory.org/parsley"
	width="100%" height="100%"
	>
	
	<fx:Script>
		<![CDATA[
			import com.masuland.loginexample.view.cb.UserBoxCB;
			
			[Inject]
			[Bindable]
			public var cb:UserBoxCB;
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<vo:UserVO
			id="vo_user"
			username="{ cb.currentUser.username }"
			firstname="{ tip_firstname.text }"
			lastname="{ tip_lastname.text }"
			email="{ tip_email.text }"
			birthday="{ df_birthday.selectedDate }"
			/>
		
		<parsley:Configure />
	</fx:Declarations>
	
	<s:VGroup
		left="5" right="5" top="5" bottom="5"
		>
		
		<s:HGroup
			width="100%"
			verticalAlign="middle"
			>

			<s:Label
				id="txt_header"
				width="100%"
				styleName="loginHeader"
				text="{ resourceManager.getString('resources', 'title_user_account') }"
				/>
			
			<s:Button
				id="btn_logout"
				height="35"
				label="{ resourceManager.getString('resources', 'cta_logout') }"
				buttonMode="true" 
				useHandCursor="true"
				click="cb.logout()"
				/>
			
		</s:HGroup>
		
		<mx:HRule
			width="100%"
			/>
		
		<s:Group
			width="100%" height="100%"
			>
			
			<s:VGroup
				verticalCenter="0"
				left="10" right="10"
				>
				
				<s:HGroup
					width="100%"
					gap="0"
					>
					<s:Label
						text="{ resourceManager.getString('resources', 'txt_username') }"
						styleName="descriptor"
						/>
					<s:Label
						width="100%"
						text="{ cb.currentUser.username }"
						styleName="descriptor"
						/>
				</s:HGroup>
			
				<s:VGroup
					width="100%"
					gap="0"
					>
					<s:Label
						width="100%"
						text="{ resourceManager.getString('resources', 'txt_firstname') }"
						styleName="descriptor"
						/>
					<s:TextInput
						id="tip_firstname"
						width="100%"
						text="{ cb.currentUser.firstname }"
						/>
				</s:VGroup>
				
				<s:VGroup
					width="100%"
					gap="0"
					>
					<s:Label
						width="100%"
						text="{ resourceManager.getString('resources', 'txt_lastname') }"
						styleName="descriptor"
						/>
					<s:TextInput
						id="tip_lastname"
						width="100%"
						text="{ cb.currentUser.lastname }"
						/>
				</s:VGroup>
				
				<s:VGroup
					width="100%"
					gap="0"
					>
					<s:Label
						width="100%"
						text="{ resourceManager.getString('resources', 'txt_email') }"
						styleName="descriptor"
						/>
					<s:TextInput
						id="tip_email"
						width="100%"
						text="{ cb.currentUser.email }"
						/>
				</s:VGroup>
				
				<s:VGroup
					width="100%"
					gap="0"
					>
					<s:Label
						width="100%"
						text="{ resourceManager.getString('resources', 'txt_birthday') }"
						styleName="descriptor"
						/>
					<mx:DateField
						id="df_birthday"
						width="100%"
						text="{ cb.currentUser.birthday }"
						/>
				</s:VGroup>
				
			</s:VGroup>
			
		</s:Group>
		
		<mx:HRule
			width="100%"
			/>
		
		<s:HGroup
			id="bx_updateButtons"
			>
			<s:Button
				id="btn_update"
				height="35"
				label="{ resourceManager.getString('resources', 'cta_update') }"
				buttonMode="true" 
				useHandCursor="true"
				click="cb.updateUser(vo_user)"
				/>
		</s:HGroup>

	</s:VGroup>
		
</s:Group>
