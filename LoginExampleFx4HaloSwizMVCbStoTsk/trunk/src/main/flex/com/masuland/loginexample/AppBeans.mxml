<?xml version="1.0" encoding="utf-8"?>
<swiz:BeanProvider
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:swiz="http://swiz.swizframework.org"
	xmlns:business="com.masuland.loginexample.business.*"
	xmlns:control="com.masuland.loginexample.control.*"
	xmlns:task="com.masuland.loginexample.control.task.*" 
	xmlns:model="com.masuland.loginexample.model.*" 
	xmlns:view="com.masuland.loginexample.view.*" 
	xmlns:cb="com.masuland.loginexample.view.cb.*" 
	>
	
	<mx:ChannelSet 
		id="appDynamicChannel"
		>
		<mx:channels>
			<mx:AMFChannel 
				id="graniteAmfChannel"
				url="http://localhost:8080/AppName/graniteamf/"
				/>
		</mx:channels>
	</mx:ChannelSet> 
	
	<mx:RemoteObject
		id="appRemoteObject" 
		destination="appService"
		source="com.masuland.loginexample.swiz.service.AppService"
		channelSet="{ appDynamicChannel }"
		/>

	<!-- DELEGATE -->	
<!--	
	<business:AppAmfDelegate 
		id="appDelegate" 
		/>
-->
	<business:AppMockDelegate 
		id="appDelegate" 
		/>
	
	<!-- STORY -->	
	
	<control:AppStories
		id="appStories"
		/>
	
	<!-- TASK -->	
	
	<task:GetSettingsSeqTask 
		id="initAppStory"
		/>
	
	<task:LoadLayoutSeqTask 
		id="loadLayoutSeqTask"
		/>
	
	<task:GetSettingsTask 
		id="getSettingsTask"
		/>
	
	<task:LoadLayoutTask 
		id="loadLayoutTask"
		/>
	
	<task:LoadStyleTask 
		id="loadStyleTask"
		/>
	
	<task:LoadLocaleTask 
		id="loadLocaleTask"
		/>
	
	<task:LoginTask
		id="loginTask"
		/>
	
	<task:RegisterTask
		id="registerTask"
		/>
	
	<task:UpdateUserTask
		id="updateUserTask"
		/>

	<!-- MODEL -->	

	<model:AppModel 
		id="appModel"
		/>

	<!-- CODE BEHIND -->
	
	<cb:AppViewCB 
		id="appViewCB"
		/>
	
	<cb:SettingsBoxCB 
		id="settingsBoxCB"
		/>

	<cb:LayoutStackCB
		id="layoutStackCB"
		/>
	
	<cb:AppStackCB
		id="appStackCB"
		/>

	<cb:LoginBoxCB
		id="loginBoxCB"
		/>
	
	<cb:UserBoxCB
		id="userBoxCB"
		/>

</swiz:BeanProvider>
